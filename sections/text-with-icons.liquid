<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}
{{ 'section-text-with-icon.css' | asset_url | stylesheet_tag }}

<div class="{% unless section.settings.full_width %}page-width{% endunless %}">
  <div class="rich-text color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width{% endif %}">
    <div class="rich-text__blocks">
       {% if section.settings.image != blank %} <img loading="lazy" src="{{ section.settings.image | img_url: '1900x' }}" alt="{{ section.settings.image.alt | escape }}"> {% endif %}
  <div class="flex-3">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
          <div>
            <h1 class="{{ block.settings.heading_size }}" {{ block.shopify_attributes }}>{{ block.settings.heading | escape }}</h1>
         <div class="rich-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          </div>
      {%- when 'Icon' -%}
           
       
      <div class="icon_list">
          	{% if block.settings.image_one != blank %}<img src= "{{block.settings.image_one | image_url : '170x' }}" loading="lazy" width="70" height="70" alt="{{ block.settings.image_one.alt | escape }}"/>{% endif %}
      		{% if block.settings.image_two != blank %} <img src= "{{block.settings.image_two | image_url : '170x'}}" loading="lazy" width="70" height="70" alt="{{ block.settings.image_two.alt | escape }}"/>{% endif %}
      		 {% if block.settings.image_three != blank %}<img src= "{{block.settings.image_three | image_url : '170x'}}" loading="lazy" width="70" height="70" alt="{{ block.settings.image_three.alt | escape }}"/>{% endif %}
        	{% if block.settings.image_four != blank %}<img src= "{{block.settings.image_four | image_url : '170x'}}" loading="lazy" width="70" height="70" alt="{{ block.settings.image_four.alt | escape }}"/>{% endif %}
        {% if block.settings.image_five != blank %}<img src= "{{block.settings.image_five | image_url : '170x'}}" loading="lazy" width="70" height="70" alt="{{ block.settings.image_five.alt | escape }}""/>{% endif %}
      </div>
       {%- endcase -%}
       
      {%- endfor -%}
  </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.text-with-icons.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Top Banner"
   		 }, 
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.text-with-icons.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.text-with-icons.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.text-with-icons.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.text-with-icons.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.text-with-icons.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.text-with-icons.settings.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.text-with-icons.settings.full_width.label"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.text-with-icons.blocks.heading.name",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "t:sections.text-with-icons.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "t:sections.text-with-icons.blocks.heading.settings.heading_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:sections.text-with-icons.blocks.heading.settings.heading_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:sections.text-with-icons.blocks.heading.settings.heading_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:sections.text-with-icons.blocks.heading.settings.heading_size.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "t:sections.text-with-icons.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "Icon",
      "name": "Icon",
      "limit": 1,
      "settings": [
        
 		{
        "type": "image_picker",
        "id": "image_one",
        "label": "t:sections.text-with-icons.blocks.image_one.settings.image_one.label"
   		 }, 
	 {
        "type": "image_picker",
        "id": "image_two",
        "label": "t:sections.text-with-icons.blocks.image_two.settings.image_two.label"
   	 }, 
 		{
        "type": "image_picker",
        "id": "image_three",
        "label": "t:sections.text-with-icons.blocks.image_three.settings.image_three.label"
   		 }, 
		{
          "type": "image_picker",
          "id": "image_four",
          "label": "t:sections.text-with-icons.blocks.image_four.settings.image_four.label"
   		 }, 
		{
          "type": "image_picker",
          "id": "image_five",
          "label": "Image Five"
   		 }

      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.text-with-icons.presets.name",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
}
{% endschema %}
