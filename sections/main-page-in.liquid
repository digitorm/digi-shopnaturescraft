<!--AZEXO_sections/main-page-in.liquid_Section--><link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">


<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<div class="influencers-top">
   <div class="page-width">
     <div class="max-width-600">
        <h1 class="title--primary">{{ section.settings.text | escape }}</h1>
       

     
     </div>
  </div>
</div>
<div class="page-width page-width--full inful">
   <p class="side-title page-influencers">{{page.title}}</p> 
  
    <ul class="influencers-grid">
      
        {%- for block in section.blocks -%}
      {%- assign product = block.settings.product -%}
          <li class="influencers-list__item  {% if product != blank %}product-link{% endif %}">
            <div class="influencers-card hide">
              
               
                <div class="influencers-card__image-wrapper">
               {%- if block.settings.image != blank -%}
                    <img src="{{ block.settings.image | img_url: '550x' }}" alt="{{ block.settings.image.alt }}"> {%- endif -%}
                </div>
             
              <div class="influencers-card__info">
                {%- if block.settings.title != blank -%}
                  <h2>{{ block.settings.title | escape }}</h2>
                {%- endif -%}
                {%- if block.settings.about != blank -%}
                  <h5>{{ block.settings.about | escape }}</h5>
                {%- endif -%}
                
                
                {%- if block.settings.text != blank -%}
                  <div class="rte">{{ block.settings.text }}</div>
                {%- endif -%}
              </div>
              {%- if product != blank -%}
            <div class="prod-over">
              <div class="close">
                <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8.59 0L5 3.59L1.41 0L0 1.41L3.59 5L0 8.59L1.41 10L5 6.41L8.59 10L10 8.59L6.41 5L10 1.41L8.59 0Z" fill="#4CAF50"/>
                </svg>
              </div>
              
              <div class="max-262">
               {%- if block.settings.title != blank -%}
                  <p class="recom">{{ block.settings.title | truncatewords: 1, '' }} RECOMMENDS</p>
                {%- endif -%}
             {%- if product.title != blank -%}
            	<h2>{{ product.title | escape | truncate: 25 }}</h2>
             {%- endif -%}
             {%- if product.description != blank -%}
            	<p>{{ product.description | strip_html | truncate: 50, '' }}</p>
              {%- endif -%}
             {%- if product.featured_media!= blank -%}
            	<img src="{{ product.featured_media | img_url: '533x' }}" alt="">
  			{%- endif -%}
            </div>
              <a href="{{ product.url }}"><svg width="15" height="14" viewBox="0 0 15 14" xmlns="http://www.w3.org/2000/svg">
<path d="M13.7531 8.23919L14.9842 2.55169C15.0731 2.14104 14.7758 1.75 14.3747 1.75H4.14604L3.90734 0.524727C3.84787 0.219324 3.59193 0 3.29503 0H0.625C0.279818 0 0 0.293809 0 0.65625V1.09375C0 1.45619 0.279818 1.75 0.625 1.75H2.44487L4.27425 11.1408C3.83659 11.4051 3.54167 11.9006 3.54167 12.4688C3.54167 13.3144 4.19458 14 5 14C5.80542 14 6.45833 13.3144 6.45833 12.4688C6.45833 12.0402 6.29044 11.6529 6.02021 11.375H11.4798C11.2096 11.6529 11.0417 12.0402 11.0417 12.4688C11.0417 13.3144 11.6946 14 12.5 14C13.3054 14 13.9583 13.3144 13.9583 12.4688C13.9583 11.8625 13.6227 11.3386 13.136 11.0905L13.2796 10.4267C13.3685 10.016 13.0713 9.625 12.6702 9.625H5.68013L5.50969 8.75H13.1437C13.4355 8.75 13.6885 8.53798 13.7531 8.23919Z" fill="#0a0a0a"></path>
</svg></a>
              
              </div>
             {%- endif -%}
            </div>
            
            
            
             
          
          </li>
        {%- endfor -%}
      </ul>

    
  
 
</div>


<script type="text/javascript">//<![CDATA[

$('.product-link .influencers-card__image-wrapper, .influencers-card__info').on('click', function (event) {
    $(this).parents('.product-link .influencers-card').removeClass('hide');
    
   // $(this).find(".prod-over").show();
});

$('.close').on('click', function (event) {
    //$(this).parents('.product-link').closest(".prod-over").hide();
     $(this).parents('.product-link .influencers-card').addClass('hide');
  
});


</script>



<style>
  .influencers-top {
    background-image: url({{section.settings.image | img_url : '2000x'}});
  }
  
  
  
</style>
{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "settings": [
   
    {
      "type": "text",
      "id": "text",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Backround"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "text",
          "id": "about",
          "label": "Type"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.multicolumn.blocks.column.settings.text.label"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ]
}
{% endschema %}
<!--End_AZEXO_sections/main-page-in.liquid_Section-->