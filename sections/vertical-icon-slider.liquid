<style>
#shopify-section-{{section.id}} .icon-slider  .icon-inner {
    display: inline-block;
    padding-left: 5px;
  padding-right: 5px;
    width: 20%;
    margin-bottom: 15px;
    overflow: hidden;
}
/* #shopify-section-{{section.id}} .icon-slider.slick-initialized.slick-slider {
    padding: 0 5px;
    overflow: hidden;
}

#shopify-section-{{section.id}} .icon-slider.slick-initialized.slick-slider .slick-list.draggable {
    overflow: visible;
} */
#shopify-section-{{section.id}} .icon-slider.slick-slider {
    margin-left: 0;
}
#shopify-section-{{section.id}} .icon-slider {
    margin-left: -15px;
    padding-top: 4rem;
}
#shopify-section-{{section.id}} h1.icon-heading {
    width: 100%;
    margin: 0 0 14px;
}
#shopify-section-{{section.id}} a.button[href="javascript:void(0)"] {
    cursor: default;
    pointer-events: none;
}
#shopify-section-{{section.id}} icon-slider  a.button {
    width: 100%;
}
#shopify-section-{{section.id}} .icon-slider.slick-slider .slick-arrow:before {
    content: none;
}
#shopify-section-{{section.id}} .icon-slider.slick-slider .slick-prev.slick-arrow {
    top: -30px;
    left: calc(50% - 10px);
    right: auto;
    margin: 0 auto;
    text-align: center;
    padding: 0 10px;
    width: auto;
    height: auto;
    transform: translateX(-50%);
}
#shopify-section-{{section.id}} .icon-slider.slick-slider .slick-next.slick-arrow {
    top: -30px;
    left: calc(50% + 10px);
    right: auto;
    margin: 0 auto;
    text-align: center;
    padding: 0 10px;
    width: auto;
    height: auto;
    transform: translateX(-50%);
}
#shopify-section-{{section.id}} .icon-inner a.button {
    background: #fff;
    border-radius: 15px;
    line-height: normal;
    height: 131px;
    padding: 0 10px;
    text-align: center;
    color: #000;
    letter-spacing: .25px;
    font-weight: normal;
    box-shadow: none !important;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 1px solid rgb(162 162 162 / 50%);
}
#shopify-section-{{section.id}} .icon-inner a.button:hover {
    background: #f26b27;
}
#shopify-section-{{section.id}} .text_container {
    margin-top: 10px;
}
#shopify-section-{{section.id}} .icon-inner a.button img {
    margin-right: 0;
    height: 60px;
    padding: 7px;
    width: 60px;
    object-fit: contain;
}
#shopify-section-{{section.id}} .image_container {
    border-radius: 50%;
}
  
#shopify-section-{{section.id}} .icon-inner a.button {
    font-size: 1.6rem;
      font-family: 'BWMODELICA-MEDIUM';
}

  @media (max-width: 767px){
    #shopify-section-{{section.id}} .icon-slider {
    margin-left: 0;
}
  }
</style>

<div class="page-width">
  <div class="text-center title-wrapper-with-link ">
    <h1 class="icon-heading ">{{ section.settings.title | escape }}</h1>
    {% if section.settings.text != blank %}
      <div class="rich-text__text rte">{{ section.settings.text }}</div>
    {%- endif -%}
  </div>

  <div class="icon-slider">
    {%- for block in section.blocks -%}
      <div class="icon-inner">
        <a
          class="button"
          href="{% if block.settings.url != blank %}{{block.settings.url  | remove: '/es' }}{%else%}javascript:void(0){%endif%}"
        >
          {% if block.settings.image != blank %}
            <div class="image_container" style="background:{{ block.settings.color_title }}">
              <img src="{{block.settings.image | img_url : '100x'}}" width="100" height="100" loading="lazy" alt="{{ block.settings.image.alt | escape }}">
            </div>
          {% endif %}
          {% if block.settings.title != blank %}
            <div class="text_container">
              <span>{{ block.settings.title }}</span>
            </div>
          {% endif %}
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>
<script type="text/javascript">
$(document).on('ready', function() {


$("#shopify-section-{{section.id}} .icon-slider").slick({
 dots: false,
  autoplay: false,
  arrows: true,
  infinite: true,
  speed: 300,
  adaptiveHeight: true,
  slidesToShow: 6,
  centerPadding: '7.5px',
  slidesToScroll: 1, 
  responsive: [
    {
      breakpoint: 1200,
      settings: {
        slidesToShow: 5,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 991,
      settings: {
        slidesToShow: 4,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 769,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ],
  prevArrow: '<div class="slick-prev"><svg width="11" height="16" viewBox="0 0 11 16" fill="none"><path d="M9 1.32422L3 8.05339L9 14.7826" stroke="black" stroke-width="3"/></svg></div>',
  nextArrow: '<div class="slick-next"><svg width="11" height="16" viewBox="0 0 11 16" fill="none"><path d="M2 14.7812L8 8.05208L2 1.32292" stroke="black" stroke-width="3"/></svg></div>'
});
 
  
 
});
</script>
{% schema %}
{
  "name": "Vertical Icon Slider",
  "tag": "section",
  "class": "spaced-section icon-slider-section vertical icon slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.collection-list.settings.title.label"
    },
	{
          "type": "richtext",
          "id": "text",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Dolor est arcu urna vel nisi a scelerisque. Ornare lectus nisi amet,</p>",
          "label": "t:sections.rich-text.blocks.text.settings.text.label"
    }
  ],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Icon Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
		{
          "type": "url",
          "id": "url",
          "label": "URL"
        }, {
          "type": "color",
           "id": "color_title",
           "label": "Icon Background color",
            "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vertical Icon Slider"

    }
  ]
}
{% endschema %}
